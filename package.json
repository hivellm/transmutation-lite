{
  "name": "@hivellm/transmutation-lite",
  "version": "0.3.0",
  "description": "Simplified document converter for common formats (PDF, DOCX, XLSX, PPTX) to Markdown",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "transmutation-lite": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "document-conversion",
    "pdf",
    "docx",
    "xlsx",
    "pptx",
    "markdown",
    "converter",
    "typescript",
    "cli"
  ],
  "author": "HiveLLM Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hivellm/transmutation-lite.git"
  },
  "bugs": {
    "url": "https://github.com/hivellm/transmutation-lite/issues"
  },
  "homepage": "https://github.com/hivellm/transmutation-lite#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "jszip": "^3.10.1",
    "mammoth": "^1.11.0",
    "pdf-parse-new": "^1.4.1",
    "turndown": "^7.2.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^22.18.12",
    "@types/pdf-parse": "^1.1.4",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.19.0",
    "happy-dom": "^20.0.8",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  }
}
